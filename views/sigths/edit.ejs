<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= sigth.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/sigths/<%=sigth._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="sigth[name]" value="<%= sigth.name %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="sigth[price]" value="<%= sigth.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sigth[image]" value="<%= sigth.image %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="sigth[description]" value="<%= sigth.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/sigths">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>